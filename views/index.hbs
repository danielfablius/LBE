<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<div id="1" class="square-green"></div>
<br>
<div id="2" class="square-green"></div>
<br>
<div id="3" class="square-green"></div>
<br>
<div id="4" class="square-green"></div>
<style>
.square-red {
	width: 100px;
	height: 100px;
	background: red;
}
.square-green {
	width: 100px;
	height: 100px;
	background: green;
}
</style>
<script src="/javascripts/please-wait.min.js"></script>
<script type="text/javascript">
  window.loading_screen = window.pleaseWait({
    logo: "images/pathgather.png",
    backgroundColor: '#f46d3b',
    loadingHtml: "<p class='loading-message'>LBE AJK</p><div class='sk-spinner sk-spinner-wave'><div class='sk-rect1'></div><div class='sk-rect2'></div><div class='sk-rect3'></div><div class='sk-rect4'></div><div class='sk-rect5'></div></div>"
  });
</script>
<script src="/socket.io/socket.io.js"></script>

<script>

  var socket = io.connect();
  socket.on('stop_loading', function (data){
  	window.loading_screen.finish();
  })
  socket.on('update_parkiran', function (data) {
    for (var i = 0; i < data.length; i++) {
    	
    	var kotak = document.getElementById(data[i].id);
    	if(data[i].status==1){
    		kotak.className= "square-red";
    	}
    	else {
    		kotak.className= "square-green";
    	}
    };
  });
</script>